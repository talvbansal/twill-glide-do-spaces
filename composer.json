{
    "name": "talvbansal/twill-glide-do-spaces",
    "description": "Make glide work with twill and digital ocean spaces easily",
    "keywords": [
        "talvbansal",
        "twill",
        "digital ocean",
        "laravel",
        "twill-glide-do-spaces"
    ],
    "homepage": "https://github.com/talvbansal/twill-glide-do-spaces",
    "license": "MIT",
    "authors": [
        {
            "name": "Talv Bansal",
            "email": "talvbansal@outlook.com",
            "homepage": "https://talvbansal.me",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4",
        "area17/twill": "2.x",
        "league/glide-laravel": "^1.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "orchestra/testbench": "^5.0",
        "phpunit/phpunit": "^9.0",
        "psalm/plugin-laravel": "^1.2",
        "vimeo/psalm": "^3.11"
    },
    "autoload": {
        "psr-4": {
            "Talvbansal\\TwillGlideDoSpaces\\": "src"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Talvbansal\\TwillGlideDoSpaces\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Talvbansal\\TwillGlideDoSpaces\\TwillGlideDoSpacesServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
